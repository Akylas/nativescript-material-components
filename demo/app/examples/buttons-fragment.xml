<StackLayout xmlns:mdcb="nativescript-material-button" xmlns:mdcfb="nativescript-material-floatingactionbutton">
    <mdcfb:FloatingActionButton id="fab" src="res://ic_action_add" backgroundColor="blue" tap="{{ onTap }}"/>
    <mdcb:Button id="button1" elevation="5" borderRadius="10" fontSize="20" text="raised button" tap="{{ onTap }}"/>
    <mdcb:Button id="button2" borderRadius="10" color="red" text="text button" rippleColor="green" backgroundColor="red" variant="text" tap="{{ onTap }}">
        <FormattedString>
            <Span text="Words " color="#006600"></Span>
            <Span text="with " color="#990000" fontAttributes="Bold"></Span>
        </FormattedString>
    </mdcb:Button>
    <mdcb:Button id="button3" text="flat button \n test" rippleColor="red" backgroundColor="yellow" variant="flat" tap="onTap"/>
    <mdcb:Button id="button4" text="flat disabled button" isEnabled="false" rippleColor="red" backgroundColor="yellow" tap="{{ onTap }}"/>
    <mdcb:Button id="button5" text="outline button" color="black" width="200" className="buttonYellow" variant="outline" tap="{{ onTap }}"/>
    <mdcb:Button id="button6" text="disabled outline button" isEnabled="false" width="200" backgroundColor="yellow" variant="outline" tap="{{ onTap }}"/>
    <mdcb:Button id="button7" text="text button" width="200" color="blue" variant="text" tap="{{ onTap }}"/>
    <mdcb:Button id="button8" text="disabled text button" isEnabled="false" width="200" backgroundColor="yellow" variant="text" tap="{{ onTap }}"/>
    <mdcb:Button id="button9" className="falseFAb" text="+" color="white" verticalAlign="center" backgroundColor="green" tap="{{ onTap }}"/>
</StackLayout>