<StackLayout 
    xmlns:lv="nativescript-ui-listview"
    xmlns:mdcr="nativescript-material-ripple" 
    >
    <ListView id="listview" height="200" items="{{ dataItems }}" itemTap="onTap" class="list-group">
        <ListView.itemTemplate>
            <mdcr:Ripple class="list-group-item item-with-border">
                <Label text="{{ title }}" textWrap="true" class="title"/>
            </mdcr:Ripple>
        </ListView.itemTemplate>
    </ListView>
</StackLayout>