<Page xmlns="http://schemas.nativescript.org/tns.xsd" 
      loaded="pageLoaded" 
      xmlns:mdr="nativescript-material-ripple"
      xmlns:lv="nativescript-ui-listview">
<Page.actionBar>
    <ActionBar title="Material Components">
    </ActionBar>
</Page.actionBar>

<ListView items="{{ examples }}" class="list-group" itemTap="{{ onTap }}">
  <ListView.itemTemplate>
    <mdr:Ripple class="list-group-item" height="50" borderBottomColor="black" borderBottomWidth="0" tap="{{ $parents['ListView'].onTapInsideTemplate }}" >
      <Label text="{{ title }}" textWrap="true"/>
    </mdr:Ripple>
  </ListView.itemTemplate>
</ListView>
</Page>