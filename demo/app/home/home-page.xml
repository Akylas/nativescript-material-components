<Page xmlns="http://schemas.nativescript.org/tns.xsd" 
      loaded="pageLoaded" 
      xmlns:mdr="nativescript-material-ripple"
      xmlns:lv="nativescript-ui-listview">
<Page.actionBar>
    <ActionBar title="Material Components">
    </ActionBar>
</Page.actionBar>

<lv:RadListView items="{{ examples }}" class="list-group" itemTap="{{ onTap }}">
  <lv:RadListView.itemTemplate>
    <mdr:Ripple class="list-group-item" height="50" borderBottomColor="black" borderBottomWidth="0" >
      <Label text="{{ title }}" textWrap="true"/>
    </mdr:Ripple>
  </lv:RadListView.itemTemplate>
</lv:RadListView>
</Page>