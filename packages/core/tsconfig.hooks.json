{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "rootDir": "../../src/core",
        "outDir": "./",
        "paths": {
            "tns-core-modules": ["./node_modules/@nativescript/core"],
            "tns-core-modules/*": ["./node_modules/@nativescript/core/*"],
            "*": ["node_modules/*", "packages/*"]
        }
    },
    "include": ["../../src/core/hooks/**/*.ts", "../../references.d.ts", "../../src/references.d.ts"],
    "exclude": ["../../src/core/angular/**"]
}
